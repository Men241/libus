<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Libus"
            android:layout_weight="1"
            android:textSize="22sp"
            android:fontFamily="@font/futura_bold"
            android:textColor="#414149"/>

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:foreground="?android:attr/activatedBackgroundIndicator"
            android:onClick="execute"/>

        <View
            android:layout_width="48dp"
            android:layout_height="32dp"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:foreground="?android:attr/activatedBackgroundIndicator"
            android:onClick="execute"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_compose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bou_clair_60"
                android:padding="20dp"
                android:text="Retirer  1 000 F \nchez Abou"
                android:textColor="#6f4248"
                android:fontFamily="@font/futura"
                android:onClick="execute"/>

            <TextView
                android:id="@+id/tv_solde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bou_clair_60"
                android:layout_marginTop="5dp"
                android:padding="20dp"
                android:text="Consulter le solde Airtel Money"
                android:textColor="#6f4248"
                android:fontFamily="@font/futura"
                android:onClick="execute"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bou_clair_60"
                android:padding="20dp"
                android:text="Acheter 100 F de crÃ©dit de communication"
                android:textColor="#6f4248"
                android:fontFamily="@font/futura"
                android:onClick="execute"/>
            <TextView
                android:id="@+id/tv_forfait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bou_clair_60"
                android:layout_marginTop="5dp"
                android:padding="20dp"
                android:text="Activer le forfait de 37 MB de 250 F"
                android:textColor="#6f4248"
                android:fontFamily="@font/futura"
                android:onClick="execute"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>